{
	"name": "blog",
	"version": "1.0.0",
	"description": "A blog service (API)",
	"author": "Mohammad Mahdi Seraj",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@devoxa/prisma-relay-cursor-connection": "^2.2.1",
		"@fastify/static": "^5.0.2",
		"@fastify/swagger": "^6.0.1",
		"@nestjs-modules/mailer": "^1.6.1",
		"@nestjs/bull": "^0.5.5",
		"@nestjs/common": "^8.4.5",
		"@nestjs/core": "^8.4.5",
		"@nestjs/jwt": "^8.0.1",
		"@nestjs/mapped-types": "^1.0.1",
		"@nestjs/passport": "^8.2.1",
		"@nestjs/platform-fastify": "^8.4.5",
		"@nestjs/swagger": "^5.2.1",
		"@prisma/client": "^3.14.0",
		"argon2": "^0.28.5",
		"bull": "^4.8.4",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"ejs": "^3.1.8",
		"fastify": "^3.29.0",
		"fastify-multer": "^2.0.2",
		"fastify-swagger": "^5.2.0",
		"lodash": "^4.17.21",
		"nest-fastify-multer": "^1.0.1",
		"nestjs-minio": "^2.1.16",
		"nestjs-redis": "git+https://github.com/GyanendroKh/nestjs-redis.git#nest8-fix",
		"nodemailer": "^6.7.5",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"pino-pretty": "^7.6.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.5"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.2.6",
		"@nestjs/schematics": "^8.0.11",
		"@nestjs/testing": "^8.4.5",
		"@types/bull": "^3.15.8",
		"@types/jest": "27.5.1",
		"@types/lodash": "^4.14.182",
		"@types/minio": "^7.0.13",
		"@types/multer": "^1.4.7",
		"@types/node": "^17.0.35",
		"@types/nodemailer": "^6.4.4",
		"@types/passport-jwt": "^3.0.6",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"prisma": "^3.14.0",
		"run-script-webpack-plugin": "^0.1.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.2.3",
		"ts-jest": "^28.0.3",
		"ts-loader": "^9.3.0",
		"ts-node": "^10.8.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.7.2",
		"webpack": "^5.73.0",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
